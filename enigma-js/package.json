{
  "name": "enigma-js",
  "version": "0.3.0",
  "description": "The Javascript client for the Enigma Network",
  "main": "lib/enigma-js.js",
  "scripts": {
    "build": "webpack --env dev && webpack --env build && npm run test",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "jest",
    "test:integration": "jest -c=test/integrationTests/jest.config.js",
    "test:watch": "jest --watch",
    "report-coverage": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:enigmampc/enigma-contract.git"
  },
  "keywords": [
    "webpack",
    "es6",
    "starter",
    "library",
    "universal",
    "umd",
    "commonjs"
  ],
  "author": "Frederic Fortier <fred@enigma.co>",
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "https://enigma.co",
  "dependencies": {
    "any-promise": "^1.3.0",
    "axios": "0.19.0",
    "body-parser": "^1.18.3",
    "buffer": "^5.1.0",
    "connect": "^3.6.6",
    "core-js": "^3.1.4",
    "create-file-webpack": "^1.0.2",
    "elliptic": "^6.5.0",
    "eth-crypto": "^1.5.0",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-util": "^6.0.0",
    "eventemitter3": "^4.0.0",
    "filereader": "^0.10.3",
    "jayson": "^3.0.1",
    "jsbi": "^3.1.0",
    "net": "^1.0.2",
    "node-fetch": "^2.3.0",
    "node-forge": "^0.9.1",
    "openzeppelin-solidity": "2.4",
    "regenerator-runtime": "^0.13.3",
    "retry": "^0.12.0",
    "rlp": "^2.2.0",
    "source-map-support": "^0.5.9",
    "tls": "0.0.1",
    "@truffle/contract": "^4.1.0",
    "uuid": "^3.3.2",
    "web3-utils": "^1.2.4",
    "webpack-node-externals": "^1.7.2",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.2",
    "chai-events": "0.0.3",
    "codecov": "^3.5.0",
    "dockerode": "^3.0.0",
    "eslint": "6.6.0",
    "eslint-config-google": "0.14.0",
    "eslint-loader": "3.0.2",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jsdom": "^15.2.0",
    "jsdom-global": "3.0.2",
    "mock-local-storage": "^1.1.11",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "web3": "^1.2.4",
    "webpack": "^4.12.2",
    "webpack-cli": "^3.0.8",
    "yargs": "^15.0.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.init.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/integrationTests/"
    ],
    "testRunner": "jest-circus/runner"
  }
}
