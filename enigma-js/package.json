{
  "name": "enigma-js",
  "version": "0.0.1",
  "description": "The Javascript client for the Enigma Network",
  "main": "lib/enigma-js.js",
  "scripts": {
    "build": "webpack --env dev && webpack --env build && npm run test",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "nyc --require @babel/register mocha -R spec --timeout 4000 --colors --exit ./test/*.spec.js",
    "test:watch": "mocha --timeout 4000 --require @babel/register --colors -w ./test/*.spec.js",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "webpack",
    "es6",
    "starter",
    "library",
    "universal",
    "umd",
    "commonjs"
  ],
  "author": "Frederic Fortier <fred@enigma.co>",
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "https://enigma.co",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "any-promise": "^1.3.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "buffer": "^5.1.0",
    "connect": "^3.6.6",
    "elliptic": "6.4.0",
    "eth-crypto": "^1.2.2",
    "ethereumjs-abi": "^0.6.5",
    "eventemitter3": "^3.1.0",
    "filereader": "^0.10.3",
    "jayson": "^2.1.0",
    "net": "^1.0.2",
    "node-fetch": "^2.3.0",
    "node-forge": "^0.7.6",
    "openzeppelin-solidity": "^1.11.0",
    "rlp": "2.1.0",
    "source-map-support": "^0.5.9",
    "tls": "0.0.1",
    "truffle-contract": "^3.0.6",
    "uuid": "^3.3.2",
    "web3-utils": "1.0.0-beta.35",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.2",
    "chai-events": "0.0.1",
    "codecov": "^3.1.0",
    "eslint": "^5.4.0",
    "eslint-config-google": "^0.9.1",
    "eslint-loader": "^2.0.0",
    "jsdom": "11.11.0",
    "jsdom-global": "3.0.2",
    "mocha": "^4.0.1",
    "nyc": "^13.1.0",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "web3": "^1.0.0-beta.35",
    "webpack": "^4.12.2",
    "webpack-cli": "^3.0.8",
    "yargs": "^10.0.3"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  }
}
